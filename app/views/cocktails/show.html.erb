<div class="m-4">
  <h2><%=@cocktail.name %></h2>
  <div class="card" style="width: 18rem;">
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 286, crop: :fill %>
    <h6>How to create a <%=@cocktail.name %>:</h6>
      <ul><% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to "Delete",
            dose_path(dose.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this dose?" } %></li>
      <% end %>
  </ul>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>
</div>

<hr>

<div class= "m-4">
  <%= link_to "Back", cocktails_path, class: "btn btn-primary" %>
</div>
